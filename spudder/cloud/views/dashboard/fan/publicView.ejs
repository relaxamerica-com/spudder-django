<% include ../parts/head %>

<link href="/media/dashboard/css/jquery-ui-1.10.3.custom.min.css" rel="stylesheet" />

<% include ../parts/bodyStart %>

<div id="fan-public-view" class="container">
	<div class="row-fluid primary" id="page-header">
		<div class="wrapper">
			<div class="span12">
				<div class="row-fluid header-parts nomargin">
					<div class="span5">
						<div class="row-fluid nomargin hideOverflow">
							<h5>#<%= user %></h5>
						</div>
					</div>
					<div class="span2">
						<div class="btn btn-primary">Follow</div>
						<div class="btn btn-primary"><i class="icon-envelope"></i></div>
						<div class="clear-fix follows">
							2200 Follows
						</div>
					</div>
					<div class="span2">
						<div class="btn btn-primary">
							<i class="icon-shopping-cart"></i>
							Store
						</div>
					</div>
					<div class="span3">
						<ul class="breadcrumb path">
							<li>
								<a href="#"><i class="icon-home"></i></a> <span class="divider"> <i class="icon-chevron-right"></i> </span>
							</li>
							<li>
								<a href="/fan/public/{{ user.id }}">{{ user }}</a> <span class="divider"> <i class="icon-chevron-right"></i> </span>
							</li>
							<li class="active"><strong>Name</strong></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span6">
		
			<%- displayItems('sponsors-items', 'Sponsors I Follow', false %>
			
			<h4>
				Filter My Spuds
			</h4>
			<div id="accordion2" class="accordion">
				<div class="accordion-group">
					<div class="accordion-heading">
						<a href="#collapseOne" data-parent="#accordion2" data-toggle="collapse" class="accordion-toggle collapsed">
							All
						</a>
						<div class="switch">
							<label>
								<input type="checkbox" class="ace-switch ace-switch-2" name="switch-field-all">
								<span class="lbl"></span>
							</label>
						</div>
					</div>
					<div class="accordion-body collapse" id="collapseOne" style="height: 0px;">
						<div class="accordion-inner">
							<p>
								{% include 'filter_verbiage/all.html' %}
							</p>
						</div>
					</div>
				</div>
				<div class="accordion-group">
					<div class="accordion-heading">
						<a href="#collapseTwo" data-parent="#accordion2" data-toggle="collapse" class="accordion-toggle collapsed">
							Images
						</a>
						<div class="switch">
							<label>
								<input type="checkbox" class="ace-switch ace-switch-2" name="switch-field-1">
								<span class="lbl"></span>
							</label>
						</div>
					</div>
					<div class="accordion-body collapse" id="collapseTwo" style="height: 0px;">
						<div class="accordion-inner">
							<p>
								{% include 'filter_verbiage/images.html' %}
							</p>
						</div>
					</div>
				</div>
				<div class="accordion-group">
					<div class="accordion-heading">
						<a href="#collapseThree" data-parent="#accordion2" data-toggle="collapse" class="accordion-toggle">
							Videos
						</a>
						<div class="switch">
							<label>
								<input type="checkbox" class="ace-switch ace-switch-2" name="switch-field-1">
								<span class="lbl"></span>
							</label>
						</div>
					</div>
					<div class="accordion-body collapse" id="collapseThree">
						<div class="accordion-inner">
							<p>
								{% include 'filter_verbiage/videos.html' %}
							</p>
						</div>
					</div>
				</div>
				<div class="accordion-group">
					<div class="accordion-heading">
						<a href="#collapseFour" data-parent="#accordion2" data-toggle="collapse" class="accordion-toggle">
							Updates
						</a>
						<div class="switch">
							<label>
								<input type="checkbox" class="ace-switch ace-switch-2" name="switch-field-1">
								<span class="lbl"></span>
							</label>
						</div>
					</div>
					<div class="accordion-body collapse" id="collapseFour">
						<div class="accordion-inner">
							<p>
								{% include 'filter_verbiage/updates.html' %}
							</p>
						</div>
					</div>
				</div>
				<div class="accordion-group">
					<div class="accordion-heading">
						<a href="#collapseFive" data-parent="#accordion2" data-toggle="collapse" class="accordion-toggle">
							Favorite SPUDs
						</a>
						<div class="switch">
							<label>
								<input type="checkbox" class="ace-switch ace-switch-2" name="switch-field-1">
								<span class="lbl"></span>
							</label>
						</div>
					</div>
					<div class="accordion-body collapse" id="collapseFive">
						<div class="accordion-inner">
							<p>
								{% include 'filter_verbiage/favorites.html' %}
							</p>
						</div>
					</div>
				</div>
			</div>
			
			<div id="date-slider">
				<div class="row-fluid">
					<div class="span3">
						Date Registered
					</div>
					<div class="span7">
						<div class="ui-slider-green"></div>
					</div>
					<div class="span2 text-right">
						Current
					</div>
				</div>
			</div>
			
		</div>
		<div class="span6">
			<% include ../commons/spudsContainer.html %>
		</div>
	</div>
	
	<div class="row-fluid">
		<div class="span12">
			<%- displayItems('teams-items', 'Teams I Follow', false) %>
		</div>
	</div>
	
	<div class="row-fluid">
		<div class="span12">
			<%- displayItems('players-items', 'Players I Follow', false) %>
		</div>
	</div>
</div>

<% include ../parts/foot %>

<% include ../parts/scripts %>

		<script type="text/javascript" src="/media/dashboard/js/jquery-ui-1.10.3.custom.min.js"></script>
		<script type="text/javascript" src="/media/js/switches.js"></script>
		<script type="text/javascript" src="/media/js/spud-container.js"></script>
		<script type="text/javascript">
			$(document).ready(function() {
				$('.ui-slider-green').slider({
					orientation: "horizontal",
					range: "min",
					max: 100,
					value: 50
				});
			});
		</script>

	</body>
</html>
