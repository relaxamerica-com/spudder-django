<% include ../../parts/head %>

<link rel="stylesheet" href="/media/dashboard/css/chosen.css" />

<% include ../../parts/bodyStart %>

<div id="teams-create">
    <p class="head">
        <i class="icon-group"></i> Sponsorship Offers
    </p>

    <% if (list.length) { %>
    <table class="table table-hovered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Contact Details</th>
                <th>Profile</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        <% list.forEach(function(team) { %>
            <tr>
                <td><%= team.get('name') %></td>
                <td><%= team.get('location') %></td>
                <td><%= team.get('contact') %></td>
                <td><%= team.get('profile') %></td>
                <td>
                    <a class="btn btn-mini btn-success" href="/dashboard/teams/<%= team.id %>/offers">Sponsorship Offers</a>
                    <a class="btn btn-mini btn-danger" href="/dashboard/teams/remove/<%= team.id %>">Remove</a>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
    <% } else { %>
        <p>There are no offers created for <%= team.get('name') %> team.</p>
        <p><a href="/dashboard/teams/Th4D76dUdZ/offers/create" class="btn btn-success btn-small">Create offer</a></p>
    <% } %>
</div>

<% include ../../parts/scripts %>

<% include ../../parts/foot %>