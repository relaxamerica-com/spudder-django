<% include ../parts/head %>

<link rel="stylesheet" href="/media/dashboard/css/chosen.css" />

<% include ../parts/bodyStart %>

<div id="teams-create">
    <p class="head">
        <i class="icon-group"></i> Teams
    </p>

    <% if (list.length) { %>
    <table class="table table-hovered" id="my-teams-list">
        <thead>
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Contact Details</th>
                <th>Profile</th>
                <th>Actions</th>
                <th>Manage</th>
            </tr>
        </thead>
        <tbody>
        <% list.forEach(function(team) { %>
            <tr>
                <td><%= team.get('name') %></td>
                <td><%= team.get('location') %></td>
                <td><%= team.get('contact') %></td>
                <td><%= team.get('profile') %></td>
                <td>
                    <% if (team.get('isRegisteredRecipient')) { %>
                    <a class="btn btn-mini btn-lightgrey btn-action" href="/dashboard/teams/<%= team.id %>/offers" title="Offers">
                        <i class="icon-time"></i>
                    </a>
                    <% } else { %>
                    <a class="btn btn-mini btn-lightgrey btn-action" href="/dashboard/recipient/<%= team.id %>" title="Register with Amazon">
                        <i class="icon-credit-card"></i>
                    </a>
                    <% } %>
                    <a class="btn btn-mini btn-lightgrey btn-action" href="javascript:void(0);" title="Reports">
                        <i class="icon-file-text"></i>
                    </a>
                </td>
                <td>
                    <a class="btn btn-mini btn-lightgrey btn-action" href="/dashboard/teams/edit/<%= team.id %>" title="Edit">
                        <i class="icon-edit"></i>
                    </a>
                    <a class="btn btn-mini btn-lightgrey btn-action" href="/dashboard/teams/remove/<%= team.id %>" title="Remove">
                        <i class="icon-trash"></i>
                    </a>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
    <% } %>
</div>

<% include ../parts/scripts %>

<% include ../parts/foot %>