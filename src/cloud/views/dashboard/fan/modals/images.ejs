<%- modalTop('images-modal', false) %>

<div class="widget-body">
	<div class="widget-main">
		<form id="add-image">
			<div class="row-fluid">
				<div class="span6">
					<div class="control-group">
						<div class="controls">
							<label for="images-input-file">Image:</label>
							<input type="file" id="images-input-file" />
						</div>
					</div>
				</div>
				<div class="span6">
					<div class="control-group">
						<div class="controls">
							<label for="add-image-comment">Comment:</label>
							<textarea name="comment" id="add-image-comment"></textarea>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>

<%- modalBottom({ 'first' : { 'text' : 'Back', 'value' : 'javascript:hideModal()' }, 'second' : { 'text' : 'Next', 'value' : 'javascript:loadImage()' } }) %>