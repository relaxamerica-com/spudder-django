<div class="modal hide fade" aria-hidden="true" id="images-preview-modal">
	<div class="modal-header">
		
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		
		<h3>
			<i class="icon-microphone"></i><span class="title">SPUD</span>
		</h3>
	</div>
	<div class="modal-body">

		<div class="widget-body">
			<div class="widget-main">
				<div class="row-fluid">
					<div class="span12">
						<div class="row-fluid bar">
							<% include ../../commons/barButtons %>
						</div>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span12">
						<p id="comment-preview" class="well well-small">
							
						</p>
						<img id="image-preview" src="" />
						<form>
							<input type="hidden" id="image" name="image" />
							<input type="hidden" id="image-name" name="name" />
							<input type="hidden" id="image-comment" name="comment" />
						</form>
					</div>
				</div>
			</div>
		</div>

	</div>
	<div class="modal-footer">
		<a href="javascript:openModal('images-modal')" class="btn btn-orange">Back</a>
		<a href="" class="btn btn-orange">Finish</a>
	</div>
</div>