<% include ../../parts/head %>

<% include ../parts/bodyStart %>

<div id="team-offer">
    <section id="content">
        <div class="container">
            <div class="row">
                <div class="span8">
                    <article>
                        <div class="offer-presentation">
                            <div class="post-heading">
                                <h3 class="team-name">
                                    <a href="/teams/<%=team.id %>">
                                        <%= team.get('name') %>
                                    </a>
                                </h3>
                                <h3 class="offer-title">
                                    <% if (offer.get('website') != '') { %>
                                    <a href="<%=offer.get('website') %>" target="_blank">
                                        <%= offer.get('title') %>
                                    </a>
                                    <% } else { %>
                                    <%= offer.get('title') %>
                                    <% } %>
                                </h3>
                            </div>
                        <div class="top-wrapper">
                            <div class="flexslider">
                                <ul class="slides">
                                    <% offer.get('images').forEach(function(image) { %>

                                    <li style="width: 100%; float: left; margin-right: -100%; position: relative; display: list-item;" class="flex-active-slide">
                                        <div class="offer-description-container">
                                            <div class="preview-image">
                                                <img src="<%= image %>"/>
                                            </div>
                                        </div>
                                    </li>

                                    <% }) %>
                                </ul>

                                <ul class="flex-direction-nav">
                                    <li><a class="flex-prev" href="#">Previous</a></li>
                                    <li><a class="flex-next" href="#">Next</a></li>
                                </ul>
                            </div>
                            <div class="offer-description">
                                <p>
                                    <%= offer.get('details') %>
                                </p>
                            </div>
                        </div>
                    </article>
                </div>

                <div class="span4">
                    <aside class="right-sidebar">
                        <% include parts/details %>
                    </aside>
                </div>
            </div>

            <div class="row-fluid nomargin">
                <div class="span12">
                    <%- displayItems('sponsors1', 'Our Sponsors:', false) %>
                </div>
            </div>
        </div>
    </section>
</div>

<% include ../parts/footer %>

<% include ../../parts/scripts %>

    </body>
</html>