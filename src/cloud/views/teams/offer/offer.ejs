<% include ../../parts/head %>

<% include ../parts/bodyStart %>

<div id="team-offer">
    <section id="content">
        <div class="container">
            <div class="row">
                <div class="span8">
                    <article>
                        <div class="offer-presentation">
                            <div class="post-heading">
                                <h3 class="team-name">
                                    <a href="/teams/<%=team.id %>">
                                        <%= team.get('name') %>
                                    </a>
                                </h3>
                                <h3 class="offer-title">
                                    <% if (offer.get('website') != '') { %>
                                    <a href="<%=offer.get('website') %>" target="_blank">
                                        <%= offer.get('title') %>
                                    </a>
                                    <% } else { %>
                                    <%= offer.get('title') %>
                                    <% } %>
                                </h3>
                            </div>
                        <div class="top-wrapper">
                            <div class="flexslider">
                                <ul class="slides">
                                    <% offer.get('images').forEach(function(image) { %>

                                    <li style="width: 100%; float: left; margin-right: -100%; position: relative; display: list-item;" class="flex-active-slide">
                                        <div class="offer-description-container">
                                            <div class="preview-image">
                                                <img src="<%= image %>"/>
                                            </div>
                                        </div>
                                    </li>

                                    <% }) %>
                                </ul>

                                <ul class="flex-direction-nav">
                                    <li><a class="flex-prev" href="#">Previous</a></li>
                                    <li><a class="flex-next" href="#">Next</a></li>
                                </ul>
                            </div>
                            <div class="offer-description">
                                <p>
                                    <%= offer.get('details') %>
                                </p>
                            </div>
                        </div>
                    </article>
                </div>

                <div class="span4">
                    <aside class="right-sidebar">
                        <% include parts/details %>
                    </aside>
                </div>
            </div>

            <% if (sponsors.length) { %>
            <div class="row-fluid nomargin">
                <div class="span12">
                    <%- displaySponsors('sponsors1', 'Our Sponsors:', sponsors) %>
                </div>
            </div>
            <% } %>
        </div>
    </section>
</div>

<% include ../../parts/foot %>

<% include ../../parts/scripts %>
<script src="/media/js/moment-with-langs.js"></script>
<script>
    $(document).ready(function () {
        var $offerEndDateContainer = $('#offer-end-date'),
            endDateStr = $offerEndDateContainer.data('end-date'),
            endDate = moment(endDateStr + ' 23:59:59:999', 'DD-MM-YYYY HH:mm:ss:SSS'),
            today = moment();

        today.hour(23);
        today.minute(59);
        today.second(59);
        today.milliseconds(999);

        $offerEndDateContainer.text(today > endDate ? 'Ended' : endDate.fromNow());

        if (today > endDate) {
            var $donateBtn = $('#donate-btn');

            if (!$donateBtn.attr('disabled')) {
                $donateBtn.attr({
                    'href': 'javascript:void(0);',
                    'disabled': 'disabled',
                    'title': 'Offer ended!'
                });
            }
        }
    });
</script>

    </body>
</html>